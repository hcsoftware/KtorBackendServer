<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/theme_color_dark_pink"/>

    <LinearLayout
        android:layout_marginTop="1dp"
        android:background="@color/theme_color_light_brown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_dog_img"
            android:layout_weight=".3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:orientation="vertical"
            android:layout_weight=".7"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/theme_color_dark_pink"
                android:textStyle="italic"
                android:id="@+id/item_dog_txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DOG NAME"/>

            <TextView
                android:textColor="@color/theme_color_dark_pink"
                android:textStyle="bold"
                android:id="@+id/item_dog_txt_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DOG AGE"/>

            <TextView
                android:textColor="@color/theme_color_dark_pink"
                android:textStyle="bold"
                android:id="@+id/item_dog_txt_breed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DOG BREAD"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>