<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KtorBackendServer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/theme_color_dark_brown</item>
        <item name="colorPrimaryVariant">@color/theme_color_blue</item>
        <item name="colorOnPrimary">@color/theme_color_dark_pink</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.KtorBackendServer.TextTiTle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textColor">@color/theme_color_dark_pink</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textSize">23sp</item>
        <item name="android:shadowColor">@color/theme_color_blue</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.KtorBackendServer.TextServerDesc" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textColor">@color/theme_color_dark_pink</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.KtorBackendServer.Subtitle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textColor">@color/theme_color_dark_pink</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/theme_color_blue</item>
        <item name="android:shadowRadius">1</item>
    </style>

</resources>